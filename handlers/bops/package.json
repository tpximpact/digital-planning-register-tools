{
  "name": "@dpr/handler-bops",
  "description": "An elysia plugin for handling requests and responses from the Back Office Planning System (BOPS) API.",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "typeconfig": "tsc --showConfig",
    "dev": "bun run --watch src/server.ts",
    "test": "bun run test:unit && bun run coverage",
    "test:unit": "bun test ",
    "coverage": "bun test --coverage",
    "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server ./src/server.ts",
    "start": "NODE_ENV=production bun src/server.ts",
    "serve": "bun run build && ./server",
    "clean": "rm server && rm .*.bun-build && rm -rf logs",
    "docker": "cd ../.. && docker build -t dpr-backend:handler-bops -f ./apps/handler-bops/Dockerfile ."
  },
  "dependencies": {
    "elysia": "catalog:",
    "@elysiajs/openapi": "catalog:",
    "@dpr/libs": "catalog:",
    "@dpr/converter-bops": "catalog:",
    "@dpr/odp-schemas": "catalog:",
    "@dpr/api": "catalog:"
  },
  "devDependencies": {
    "@dpr/config": "catalog:",
    "typescript": "catalog:"
  }
}
