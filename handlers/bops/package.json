{
  "name": "@dpr/handler-bops",
  "description": "An elysia plugin for handling requests and responses from the Back Office Planning System (BOPS) API.",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "typeconfig": "tsc --showConfig",
    "dev": "bun run --watch src/server.ts",
    "build": "bun run build:types && bun run build:server",
    "build:server": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server ./src/server.ts",
    "build:types": "tsc --project tsconfig.build.json",
    "start": "NODE_ENV=production ./server",
    "serve": "bun run build && bun run start",
    "test": "bun run test:unit && bun run coverage",
    "test:unit": "bun test ",
    "coverage": "bun test --coverage"
  },
  "dependencies": {
    "elysia": "catalog:",
    "@elysiajs/openapi": "catalog:",
    "@dpr/libs": "catalog:",
    "@dpr/converter-bops": "catalog:",
    "@dpr/odp-schemas": "catalog:",
    "@dpr/api": "catalog:",
    "@dpr/config": "catalog:"
  },
  "devDependencies": {
    "@dpr/dev-config": "catalog:",
    "typescript": "catalog:"
  }
}
