{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    // Environment setup, support latest features & stop errors for featres not supported by typescript but supported by bun
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    // Extras we've added to bun's defaults
    "forceConsistentCasingInFileNames": true /* Ensure that casing is correct in imports. */,
    "resolveJsonModule": true,

    // paths
    "baseUrl": "../../../",
    "paths": {
      // apps
      "@dpr/api": ["apps/api/src/index.ts"],
      "@dpr/api/schemas": ["apps/api/src/schemas/index.ts"],
      // packages
      "@dpr/config": ["packages/config/*"],
      "@dpr/libs": ["packages/libs/src/index.ts"],
      "@dpr/ui": ["packages/ui/src/index.ts"],
      "@dpr/ui/global.css": ["packages/ui/src/global.css"],
      "@dpr/ui/components": ["packages/ui/src/components/index.ts"],
      "@dpr/ui/layouts": ["packages/ui/src/layouts/index.ts"]
    }
  },

  "exclude": ["coverage", "node_modules"]
}
