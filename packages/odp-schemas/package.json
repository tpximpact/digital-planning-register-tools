{
  "name": "@dpr/odp-schemas",
  "description": "The post submission schema in typebox form - **eventually this will be replaced by the `digital-planning-data-schemas` package**",
  "type": "module",
  "private": true,
  "exports": {
    "./*": "./src/*",
    "./types/shared/formats": "./src/types/shared/formats.ts"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "typeconfig": "tsc --showConfig",
    "build": "bun run src/scripts/build.ts"
  },
  "devDependencies": {
    "@dpr/dev-config": "catalog:",
    "typescript": "catalog:"
  },
  "dependencies": {
    "@sinclair/typebox": "catalog:"
  }
}
