{
  "name": "@dpr/ui",
  "description": "Contains react components, styles and a storybook for the Digital Planning Register that comply with Post-submission schema.",
  "type": "module",
  "private": true,
  "exports": {
    ".": "./src/index.ts",
    "./components": "./src/components/index.ts",
    "./layouts": "./src/layouts/index.ts",
    "./styles/*": "./src/styles/*"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "typeconfig": "tsc --showConfig",
    "dev": "bun run scripts/dev.ts",
    "test": "bun run test:unit && bun run coverage",
    "test:unit": "bun test ",
    "coverage": "bun test --coverage",
    "build": "bun run scripts/build.ts",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@dpr/config": "catalog:",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "sass-embedded": "^1.91.0",
    "typescript": "catalog:"
  },
  "dependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@storybook/addon-docs": "^9.0.18",
    "@storybook/addon-onboarding": "^9.0.18",
    "@storybook/blocks": "^8.6.14",
    "@storybook/experimental-addon-test": "^8.6.14",
    "@storybook/react": "^9.0.18",
    "@storybook/react-vite": "^9.0.18",
    "@storybook/test": "^8.6.14",
    "govuk-frontend": "^5.11.2",
    "storybook": "^9.0.18"
  }
}
