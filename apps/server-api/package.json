{
  "name": "@apps/server-api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server ./src/index.ts",
    "start": "NODE_ENV=production bun src/index.ts",
    "serve": "bun run build && ./server",
    "clean": "rm server && rm .*.bun-build",
    "docker": "cd ../.. && docker build -t dpr-tools:server-api -f ./apps/server-api/Dockerfile ."
  },
  "dependencies": {
    "@elysiajs/swagger": "^1.3.1",
    "elysia": "latest"
  },
  "devDependencies": {
    "bun-types": "latest",
    "config": "workspace:*"
  }
}
