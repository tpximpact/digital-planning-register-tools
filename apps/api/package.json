{
  "name": "@dpr/api",
  "description": "The application programming interface (API) for the Digital Planning Register",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "typeconfig": "tsc --showConfig",
    "dev": "bun run --watch src/server.ts",
    "test": "bun run test:unit && bun run coverage",
    "test:unit": "bun test ",
    "coverage": "bun test --coverage",
    "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server ./src/server.ts",
    "start": "NODE_ENV=production bun src/server.ts",
    "serve": "bun run build && ./server",
    "clean": "rm server && rm .*.bun-build && rm -rf logs",
    "docker": "cd ../.. && docker build -t dpr-backend:server-api -f ./apps/server-api/Dockerfile ."
  },
  "dependencies": {
    "@dpr/handler-bops": "catalog:",
    "@dpr/odp-schemas": "catalog:",
    "@dpr/application-generator": "catalog:",
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/openapi": "catalog:",
    "digital-planning-data-schemas": "file:../../digital-planning-data-schemas-0.7.5.tgz",
    "elysia": "catalog:",
    "elysia-rate-limit": "^4.4.0",
    "http-status-codes": "catalog:"
  },
  "devDependencies": {
    "@dpr/config": "catalog:",
    "typescript": "catalog:"
  }
}
