{
  "name": "@dpr/api",
  "description": "The application programming interface (API) for the Digital Planning Register",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "typeconfig": "tsc --showConfig",
    "dev": "bun run --watch src/server.ts",
    "test": "bun run test:unit && bun run coverage",
    "test:unit": "bun test ",
    "coverage": "bun test --coverage",
    "build": "bun run build:types && bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server ./src/server.ts",
    "build:types": "tsc --project tsconfig.build.json",
    "start": "NODE_ENV=production bun src/server.ts",
    "serve": "bun run build && NODE_ENV=production ./server",
    "clean": "rm server && rm .*.bun-build && rm -rf logs",
    "docker": "cd ../.. && docker build -t dpr-backend:api -f ./apps/api/Dockerfile .",
    "docker:run": "cd ../.. && docker run --env-file .env.production --rm -p 4000:3000 dpr-backend:api "
  },
  "dependencies": {
    "@dpr/application-generator": "catalog:",
    "@dpr/handler-bops": "catalog:",
    "@dpr/odp-schemas": "catalog:",
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/openapi": "catalog:",
    "@sinclair/typebox": "catalog:",
    "digital-planning-data-schemas": "file:../../digital-planning-data-schemas-0.7.5.tgz",
    "elysia": "catalog:",
    "elysia-rate-limit": "^4.4.0",
    "http-status-codes": "catalog:"
  },
  "devDependencies": {
    "@dpr/dev-config": "catalog:",
    "typescript": "catalog:",
    "@types/geojson": "catalog:"
  }
}
