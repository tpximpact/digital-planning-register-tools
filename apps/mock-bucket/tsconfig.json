{
  "extends": "config/typescript/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@apps/server-api": ["src/index.ts"],
      "@apps/server-api/*": ["src/*"],
      "@apps/client-api": ["../client-api/src/index.ts"],
      "@apps/client-api/*": ["../client-api/src/*"],
      "@ui": ["../../packages/ui/src/index.ts"],
      "@ui/*": ["../../packages/ui/src/*"],
      "@libs": ["../../packages/libs/src/index.ts"],
      "@libs/*": ["../../packages/libs/src/*"],
      "@dev-libs": ["../../packages/dev-libs/src/index.ts"],
      "@dev-libs/*": ["../../packages/dev-libs/src/*"],
      "@ui/components": ["../../packages/ui/src/components/index.ts"],
      "@ui/layouts": ["../../packages/ui/src/layouts/index.ts"]
    }
  },
  "include": ["scripts"],
  "exclude": ["node_modules", "data"]
}
