{
  "name": "dpr-api",
  "packageManager": "yarn@4.9.2",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "product/*",
    "lib/*"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "config": "tsc --showConfig",
    "lint:code": "DEBUG=eslint-import-resolver-typescript eslint .",
    "lint:format": "prettier -c .",
    "lint": "eslint . && prettier -c .",
    "lint-fix": "eslint . --fix",
    "format": "eslint --fix && prettier -c --write .",
    "sync-packages": "syncpack fix-mismatches",
    "knip": "knip",
    "knip:fix": "knip --fix --allow-remove-files",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/node": "^24.0.12",
    "eslint": "^9.30.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "knip": "^5.61.3",
    "prettier": "^3.6.2",
    "syncpack": "^13.0.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  }
}
