{
  "name": "@dpr/next-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "typecheck": "tsc --noEmit",
    "typeconfig": "tsc --showConfig",
    "dev": "bun run scripts/dev.ts",
    "build": "next build && cp -r .next/static .next/standalone/apps/next-example/.next/static && cp -r public .next/standalone/apps/next-example/public",
    "start": "NODE_ENV=production bun run scripts/start.ts",
    "serve": "bun run build && NODE_ENV=production bun run .next/standalone/apps/next-example/server.js",
    "clean": "rm -rf .next",
    "docker": "cd ../.. && docker build -t dpr-tools:next-example -f ./apps/next-example/Dockerfile .",
    "lint": "next lint"
  },
  "dependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "next": "15.4.4",
    "@dpr/api": "workspace:*",
    "@dpr/libs": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@dpr/config": "workspace:*"
  }
}
