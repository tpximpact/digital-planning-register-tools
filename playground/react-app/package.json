{
  "name": "@dpr/react-app",
  "description": "An example React application for DPR Tools",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "typeconfig": "tsc --showConfig",
    "dev": "bun run --watch --hot src/server.tsx",
    "build": "bun build ./src/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "start": "NODE_ENV=production bun src/server.tsx",
    "serve": "bun run build && NODE_ENV=production bun src/server.tsx",
    "clean": "rm -rf dist",
    "docker": "cd ../.. && docker build -t dpr-backend:react-app -f ./apps/react-app/Dockerfile ."
  },
  "dependencies": {
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "devDependencies": {
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@dpr/config": "catalog:",
    "typescript": "catalog:"
  }
}
