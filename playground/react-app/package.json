{
  "name": "@dpr/react-app",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "typeconfig": "tsc --showConfig",
    "dev": "bun run --watch --hot src/server.tsx",
    "build": "bun build ./src/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "start": "NODE_ENV=production bun src/server.tsx",
    "serve": "bun run build && NODE_ENV=production bun src/server.tsx",
    "clean": "rm -rf dist",
    "docker": "cd ../.. && docker build -t dpr-tools:react-app -f ./apps/react-app/Dockerfile ."
  },
  "dependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "@dpr/api": "workspace:*",
    "@dpr/libs": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/bun": "latest",
    "@dpr/config": "workspace:*",
    "typescript": "^5"
  }
}
