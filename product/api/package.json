{
  "name": "@product/api",
  "version": "1.0.0",
  "private": true,
  "main": "index.ts",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "config": "tsc --showConfig",
    "config:prod": "tsc --project tsconfig.prod.json --showConfig",
    "generate": "tsc --project tsconfig.prod.json",
    "dev": "tsx --watch --env-file=.env server.ts",
    "start": "node --env-file=.env.test dist/server.js",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "performance": "artillery run performance.yml",
    "clean": "rm -rf dist && rm tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "digital-planning-data-schemas": "file:../../digital-planning-data-schemas-0.7.5.tgz",
    "@product/open-api": "workspace:^",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "artillery": "^2.0.23",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "http-status-codes": "^2.3.0",
    "supertest": "^7.1.3",
    "swagger-ui-express": "^5.0.1",
    "vitest": "^3.2.4"
  },
  "devDependencies": {
    "@types/cors": "^2",
    "@types/express": "^5",
    "@vitest/coverage-v8": "3.2.4",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
