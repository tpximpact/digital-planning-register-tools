{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",

    /* If transpiling with TypeScript: */
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,

    /* AND if you're building for a library: */
    "declaration": true,

    /* AND if you're building for a library in a monorepo: */
    "composite": true,
    "declarationMap": true,

    /* overwrite default noEmit */
    "noEmit": false
  },
  "include": ["src/**/*.ts"]
}
